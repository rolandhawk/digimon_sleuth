#! /usr/bin/env ruby

require 'digimon_sleuth'
#require_relative '../lib/digimon_sleuth.rb'

while (command = gets&.strip).downcase != "exit"
  begin
    command, args = command.split(' ', 2)
    args = args.downcase

    case command.downcase
    when "path"
      paths = DigimonService::SearchPath.execute(args)
      puts "Found #{paths.count} paths:"
      puts paths
    when "class"
      puts Digimon.find(args).klass
    else
      puts "Unknown command '#{command}'"
    end
  rescue DigimonError => e
    puts e.message
  end
end
